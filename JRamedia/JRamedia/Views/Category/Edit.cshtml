@model Category

<div class="container pb-4">
    <div class="row pt-4">
        <h2 class="text-primary pt-4">Update Category</h2>
        <hr />
    </div>
    <form method="post" asp-action="Edit">
        <div class="border p-3 mt-4">
            <div asp-validation-summary="All">

            </div>
            <div class="mb-3">
                <label asp-for="Name">name</label>
                <input asp-for="Name" class="form-control tb"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder">Display Order</label>
                <input asp-for="DisplayOrder" class="form-control tb" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-prim btn-130">Update</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-100 btn-lo">Back</a>
        </div>
    </form>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}