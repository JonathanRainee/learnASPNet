@model Tuple<IEnumerable<Books>, IEnumerable<Books>>

@{
    ViewData["Title"] = "Home Page";
}

@Html.Partial("~/Views/Shared/_Navbar.cshtml")
<div class="w-100 p-4 pt-5">


    <div class="container mt-12">
        <div class="row justify-content-center pb-4">
            <div class="col-7 mx-5">
                <div id="carouselId" class="carousel slide crsl-ctr" data-bs-ride="carousel">
                    <ol class="carousel-indicators crsl-idr" >
                        <li data-bs-target="#carouselId" data-bs-slide-to="0" class="active" aria-current="true" aria-label="First slide"></li>
                        <li data-bs-target="#carouselId" data-bs-slide-to="1" aria-label="Second slide"></li>
                        <li data-bs-target="#carouselId" data-bs-slide-to="2" aria-label="Third slide"></li>
                    </ol>
                    <div class="carousel-inner rounded" role="listbox" style="overflow: hidden;">
                        <div class="carousel-item active" style="transition: transform 0.6s ease;">
                            <img src="~/images/blulok.jpg" class="w-100 h-100 d-block crsl-img" alt="blu lok"  />
                        </div>
                        <div class="carousel-item" style="transition: transform 0.6s ease;">
                            <img src="~/images/_bsd.jpg" class="w-100 h-100 d-block crsl-img" alt="Second slide" />
                        </div>
                        <div class="carousel-item" style="transition: transform 0.6s ease;">
                            <img src="~/images/kgy.jpg" class="w-100 h-100 d-block crsl-img" alt="Third slide" />
                        </div>
                    </div>
                    <button class="carousel-control-prev crsl-btn-p" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    </button>
                    <button class="carousel-control-next crsl-btn-n" type="button" data-bs-target="#carouselId" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
            <div class="col-4">
                <div class="mb-4">
                    <img src="~/images/_bsd.jpg" class="w-100 d-block rounded img-hme" alt="blu lok" />
                </div>
                <div class="mt-4 rounded">
                    <img src="~/images/kgy.jpg" class="w-100 d-block rounded img-hme" alt="blu lok" />
                </div>
            </div>
        </div>
        <div class="container pt-12 text-center pb-4 pt-3">
            <div class="row justify-content-center">
                <div class="row justify-content-center">
                    <div class="col-sm">
                        <a href="#" class="text-decoration-none">
                            <img src="~/images/icons/romance.png" alt="Romance" class="pb-1"/>
                            <p>Romance</p>
                        </a>
                    </div>
                    <div class="col-sm">
                        <a href="#" class="text-decoration-none">
                            <img src="~/images/icons/action.png" alt="Action" class="pb-1" />
                            <p>Action</p>
                        </a>
                    </div>
                    <div class="col-sm">
                        <a href="#" class="text-decoration-none">
                            <img src="~/images/icons/sports.png" alt="Sports" class="pb-1" />
                            <p>Sports</p>
                        </a>
                    </div>
                    <div class="col-sm">
                        <a href="#" class="text-decoration-none">
                            <img src="~/images/icons/sf.png" alt="Sci-Fi" class="pb-1" />
                            <p>Sci-Fi</p>
                        </a>
                    </div>
                    <div class="col-sm">
                        <a href="#" class="text-decoration-none">
                            <img src="~/images/icons/sol.png" alt="Slice of life" class="pb-1" />
                            <p>Slice of life</p>
                        </a>
                    </div>

                </div>
            </div>
        </div>
        <div class="container pt-12 text-center pb-4">
            <div class="row">
                <div class="d-flex justify-content-between mb-2">
                    <div class="col text-start">
                        <h2 class="text-primary">JRamedia recomendation</h2>
                    </div>
                    <div class="col text-end">
                        <a href="#" class="text-decoration-none h5">See all</a>
                    </div>
                </div>
                <div class="row">
                    @foreach (var obj in Model.Item2)
                    {
                        @Html.Partial("~/Views/Shared/_Book.cshtml", obj)
                    }
                </div>
            </div>
        </div>
        <div class="container pt-12 text-center pb-3">
            <div class="row">
                <div class="d-flex justify-content-between mb-2">
                    <div class="col text-start">
                        <h2 class="text-primary">Favorite book</h2>
                    </div>
                    <div class="col text-end">
                        <a href="#" class="text-decoration-none h5">See all</a>
                    </div>
                </div>
                <div class="row">
                    @foreach (var obj in Model.Item1)
                    {
                        @Html.Partial("~/Views/Shared/_Book.cshtml", obj)
                    }
                </div>
            </div>
        </div>
    </div>
</div>
