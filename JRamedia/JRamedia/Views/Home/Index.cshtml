@model User
@{
    ViewData["Title"] = "Home Page";
}



@Html.Partial("~/Views/Shared/_Navbar.cshtml")
<div class="w-100 p-4">

    @* <h1 class="display-8">Welcome</h1> *@

    <div class="container mt-12">
        @* carousell *@
        <div class="row justify-content-center pb-5">
            <div class="col-7">
                <div id="carouselId" class="carousel slide" data-bs-ride="carousel" style="max-width: 800px;">
                    <ol class="carousel-indicators">
                        <li data-bs-target="#carouselId" data-bs-slide-to="0" class="active" aria-current="true" aria-label="First slide"></li>
                        <li data-bs-target="#carouselId" data-bs-slide-to="1" aria-label="Second slide"></li>
                        <li data-bs-target="#carouselId" data-bs-slide-to="2" aria-label="Third slide"></li>
                    </ol>
                    <div class="carousel-inner rounded" role="listbox">
                        <div class="carousel-item active">
                            <img src="~/images/blulok.jpg" class="w-100 h-100 d-block" alt="blu lok" style="max-height: 425px;" />
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/_bsd.jpg" class="w-100 h-100 d-block" alt="Second slide" style="max-height: 425px;" />
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/kgy.jpg" class="w-100 h-100 d-block" alt="Third slide" style="max-height: 425px;" />
                        </div>
                    </div>
                    <button class="carousel-control-prev type="button data-bs-target=" #carouselId" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    </button>
                    <button class="carousel-control-next type="button" data-bs-target="#carouselId" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
            <div class="col-4">
                <div class="mb-4">
                    <img src="~/images/_bsd.jpg" class="w-100 d-block rounded" alt="blu lok" style="max-height: 200px;" />
                </div>
                <div class="mt-4 rounded">
                    <img src="~/images/kgy.jpg" class="w-100 d-block rounded" alt="blu lok" style="max-height: 200px;" />
                </div>
            </div>
        </div>
        @* categories *@
        <div class="container pt-12 text-center pb-5">
            <div class="row justify-content-center">
                <div class="row justify-content-center">
                    <div class="col-sm">
                        <a href="#" class="text-decoration-none">Romance</a>
                    </div>
                    <div class="col-sm">
                        <a href="#" class="text-decoration-none">Action</a>
                    </div>
                    <div class="col-sm">
                        <a href="#" class="text-decoration-none">Sports</a>
                    </div>
                    <div class="col-sm">
                        <a href="#" class="text-decoration-none">Sci-Fi</a>
                    </div>
                    <div class="col-sm">
                        <a href="#" class="text-decoration-none">Slice of Life</a>
                    </div>

                </div>
            </div>
        </div>
        @* recomendation *@
        <div class="container pt-12 text-center p-5">
            <div class="d-flex justify-content-between mb-5">
                <div class="col text-start">
                    <h2 class="text-primary">JRamedia recomendation</h2>
                </div>
                <div class="col text-end">
                    <a href="#" class="text-decoration-none h5">See all</a>
                </div>
            </div>
            <div class="d-flex justify-content-between my-5">
                <div class="col text-start">
                    <h2 class="text-primary">Favourite manga</h2>
                </div>
                <div class="col text-end">
                    <a href="#" class="text-decoration-none h5">See all</a>
                </div>
            </div>
            <div class="d-flex justify-content-between my-5">
                <div class="col text-start">
