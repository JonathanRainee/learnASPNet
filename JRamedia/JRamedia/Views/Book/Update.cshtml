@model Book

<form method="post" asp-action="">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update Book</h2>
            <hr />
        </div>
        <div asp-validation-summary="All">

        </div>

        <div class="mb-3">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control"/>
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" />
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Author">Author</label>
            <input asp-for="Author" class="form-control" />
            <span class="text-danger" asp-validation-for="Author"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" />
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>
        <button asp-controller="Book" asp-action="Update" type="submit" class="btn btn-primary">Submit</button>
        <a asp-controller="Book" asp-action="Index" class="btn btn-secondary">Back</a>
    </div>

</form>