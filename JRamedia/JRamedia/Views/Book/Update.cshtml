@model Tuple<Books,IEnumerable<Category>>

@Html.Partial("~/Views/Shared/_Navbar.cshtml")
<script src="~/js/script.js">

</script>

<div class="container pb-4">
    <div class="row pt-4">
        <h2 class="text-primary pt-4">Update Book</h2>
        <hr />
    </div>
    <form method="post" class="pb-4" enctype="multipart/form-data" asp-action="UpdateBook">
        <input type="hidden" name="Id" value="@Model.Item1.Id" />
        <div class="row">
            <div asp-validation-summary="All"></div>
            <div class="mt-2 col-6 pr-4">
                <div class="mb-3">
                    <label asp-for="Item1.Title">Title</label>
                    <input asp-for="Item1.Title" type="text" name="Title" value="@Model.Item1.Title" class="form-control tb" />
                    <span asp-validation-for="Item1.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Item1.Genre">Genre</label>
                    <select asp-for="Item1.Genre" type="" name="Genre" value="@Model.Item1.Genre" class="form-control tb">
                        @foreach (var obj in Model.Item2)
                        {
                            <option class="" value="@obj.Name">@obj.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Item1.Genre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Item1.Description">Description</label>
                    <input asp-for="Item1.Description" type="text" name="Description" value="@Model.Item1.Description" class="form-control tb" />
                    <span asp-validation-for="Item1.Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Item1.Author">Author</label>
                    <input asp-for="Item1.Author" type="text" name="Author" value="@Model.Item1.Author" class="form-control tb" />
                    <span asp-validation-for="Item1.Author" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Item1.Price">Price</label>
                    <input asp-for="Item1.Price" type="number" name="Price" value="@Model.Item1.Price" class="form-control tb" />
                    <span asp-validation-for="Item1.Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Item1.Image">Image</label>
                    <input asp-for="Item1.Image" type="file" name="Image" id="file" value="@Model.Item1.Image" class="form-control tb inp-file" />
                    <span asp-validation-for="Item1.Image" id="vld-image" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Item1.BoughtTimes">Bought Times</label>
                    <input asp-for="Item1.BoughtTimes" type="number" name="BoughtTimes" value="@Model.Item1.BoughtTimes" class="form-control tb" />
                    <span asp-validation-for="Item1.BoughtTimes" class="text-danger"></span>
                </div>
               
               

            </div>
            <div class="mt-2 col-6 pl-4">
                <div class="mb-3">
                    <label asp-for="Item1.Pages">Pages</label>
                    <input asp-for="Item1.Pages" type="number" name="Pages" value="@Model.Item1.Pages" class="form-control tb" />
                    <span asp-validation-for="Item1.Pages" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Item1.Publisher">Publisher</label>
                    <input asp-for="Item1.Publisher" type="datetime" name="Publisher" value="@Model.Item1.Publisher" class="form-control tb" />
                    <span asp-validation-for="Item1.Publisher" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Item1.Weight">Weight</label>
                    <input asp-for="Item1.Weight" type="number" name="Weight" value="@Model.Item1.Weight" class="form-control tb" />
                    <span asp-validation-for="Item1.Weight" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Item1.SerialNumber">Serial Number</label>
                    <input asp-for="Item1.SerialNumber" type="number" name="SerialNumber" value="@Model.Item1.SerialNumber" class="form-control tb" />
                    <span asp-validation-for="Item1.SerialNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Item1.Width">Width</label>
                    <input asp-for="Item1.Width" type="number" name="Width" value="@Model.Item1.Width" class="form-control tb" />
                    <span asp-validation-for="Item1.Width" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Item1.Length">Length</label>
                    <input asp-for="Item1.Length" type="number" name="Length" value="@Model.Item1.Length" class="form-control tb" />
                    <span asp-validation-for="Item1.Length" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Item1.Langugae">Language</label>
                    <input asp-for="Item1.Langugae" type="text" name="Langugae" value="@Model.Item1.Langugae" class="form-control tb" />
                    <span asp-validation-for="Item1.Langugae" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-prim btn-130" type="submit">Update</button>
                <a asp-action="Index" asp-controller="Book" class=" btn btn-100 btn-lo">Back</a>
            </div>
        </div>
    </form>
</div>
