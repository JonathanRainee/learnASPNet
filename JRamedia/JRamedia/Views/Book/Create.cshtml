@model Book

<form method="post">
    <div class="border p-3 mt-4">

        <div class="row pb-4">
            <h2 class="text-primary">Add Book</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" type="text" name="Title" value="" class="form-control"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" type="text" name="Description" value="" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Author">Author</label>
            <input asp-for="Author" type="text" name="Author" value="" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="number" name="Price" value="" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" type="submit">Add</button>
        <a asp-action="Index" asp-controller="Book" class="btn-secondary btn" style="width:150px">Back</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}