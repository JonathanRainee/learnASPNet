@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
 
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">Add Book</a>
        </div>
    </div>
    <br />
    <br />
    
    <table class="table table-bordered tabel-stripped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Genre
                </th>
                <th>
                    Description
                </th>
                <th>
                    Author
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="30%">
                        @obj.Title
                    </td> 
                    <td width="30%">
                        genre
                    </td>
                    <td width="30%">
                        @obj.Description
                    </td>
                    <td width="30%">
                        @obj.Author
                    </td>
                    <td width="30%">
                        @obj.Price
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

