@model Books
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-3 m-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Book</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label>Genre</label>
            <input disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Author">Author</label>
            <input asp-for="Author" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" disabled class="form-control" />
        </div>
        <button class="btn btn-danger" asp-controller="Book" asp-action="DeleteBook">Delete</button>
        <a class="btn btn-secondary" asp-controller="Book" asp-action="Index" style="width:150px">Back</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

